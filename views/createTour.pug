extends base

mixin navItem(link, text,icon, active)
  li(class=`${active ? 'side-nav--active' : ''}`)
    a(href=`${link}`)
      svg
        use(xlink:href=`/img/icons.svg#icon-${icon}`)
      | #{text}

block content 
  main.main
    .user-view
      nav.user-view__menu
        ul.side-nav
          +navItem('#', 'Settings', 'settings', true)
          +navItem('/my-bookings', 'My bookings', 'briefcase')
          +navItem('/my-reviews', 'My reviews', 'star')
          +navItem('/my-billings', 'Billing', 'credit-card')

        - if(user.role === 'admin')
          .admin-nav
          h5.admin-nav__heading Admin
          ul.side-nav
            +navItem('/manage-tours', 'Manage tours', 'map')
            +navItem('/manage-users', 'Manage users', 'users')
            +navItem('#', 'Manage reviews', 'star')
            +navItem('#', 'Manage bookings', 'briefcase')

      .user-view__content
        .user-view__form-container

          h2.heading-secondary.ma-bt-lg Create New Tours
          .createTour-form
            form.form.form--createTour
              .form__group.form__photo-upload
                img.form__user-photo(src='/img/tours/tour-1-cover.jpg', alt='Cover Photo')
                input.form__upload(type='file', accept='image/*', id='photo', name='photo' )
                label(for='photo') Update Cover photo
              .form__group
                label.form__label(for='name') Name
                input#name.form__input(type='text', placeholder='e.g. The Mountain Biker', required)
              .form__group
                label.form__label(for='summary') Summary
                input#summary.form__input(type='text', placeholder='One line summary', required)
              .form__group
                label.form__label(for='description') Description
                input#description.form__input(type='text', placeholder='Describe the tour', required)
              .form__group
                label.form__label(for='duration') Duration
                input#duration.form__input(type='numeric', placeholder='5', required)
              .form__group
                label.form__label(for='price') Price
                input#price.form__input(type='numeric', placeholder='999', required)
              .form__group
                label.form__label(for='maxGroupSize') Max Group Size
                input#maxGroupSize.form__input(type='numeric', placeholder='10', required)
              .form__group
                label.form__label(for='difficulty') Difficulty
                input#difficulty.form__input(type='text', placeholder='easy | medium | difficult', required)
              .form__group
                label.form__label(for='startLocation') Start Location
                input#startLocationType.form__input(type='text', placeholder='Type', required)
                input#startLocationCoord.form__input(type='text', placeholder='Coordinates', required)
                input#startLocationDesc.form__input(type='text', placeholder='Description', required)
                input#startLocationAddr.form__input(type='text', placeholder='Address', required)
              .form__group
                label.form__label(for='startDates') Start Dates
                input#startDates.form__input(type='Date', placeholder=`${Date.now()}`, required)
              .form__group
                label.form__label(for='locations') Locations
                input#locationsType.form__input(type='text', placeholder='Type', required)
                input#locationsCoord.form__input(type='text', placeholder='Coordinates', required)
                input#locationsDesc.form__input(type='text', placeholder='Description', required)
                input#locationsDay.form__input(type='text', placeholder='Day', required)
              .form__group
                label.form__label(for='guides') Assign Guides
                input#guides.form__input(type='id', placeholder='Guides Id', required)
              .form__group
                button.btn.btn--green Submit 




